{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": [
		"prettier-plugin-svelte",
		"@ianvs/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	],
	"importOrder": [
		"<TYPES>",
		"<TYPES>^[.]",
		"",
		"",
		"^react$",
		"<THIRD_PARTY_MODULES>",
		"",
		"~(.*)$",
		"^@/(.*)$",
		"",
		"^[.]",
		"^(?!.*[.]css$)[./].*$",
		".css$"
	],
	"importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
	"importOrderTypeScriptVersion": "5.2.2",
	"tailwindFunctions": ["clsx", "cn"]
}
